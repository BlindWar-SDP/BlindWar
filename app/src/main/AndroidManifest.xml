<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.sdp.blindwar">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <queries>
        <intent>
            <action android:name="android.speech.RecognitionService" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_base"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round_base"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlindWar"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".login.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".login.UserNewInfoActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.solo.SoloActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />
        <activity
            android:name=".login.UserAdditionalInfoActivity"
            android:exported="false"
            android:parentActivityName=".login.UserNewInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.multi.MultiPlayerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.multi.MultiPlayerFriendActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.multi.MultiPlayerRandomActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.solo.TutorialActivity"
            android:parentActivityName=".menu.MainMenuActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.HistoryActivity"
            android:parentActivityName=".profile.fragments.ProfileFragment"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".profile.fragments.StatisticsActivity"
            android:parentActivityName=".profile.fragments.ProfileFragment"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".menu.MainMenuActivity"
            android:exported="true"
            android:screenOrientation="portrait" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>