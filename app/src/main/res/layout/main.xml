<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/recognize_mic_fr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recognize_microphone_fr"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/recognize_mic_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recognize_microphone_en"
            android:layout_margin="20dp"/>

        <EditText
            android:inputType="text"
            android:labelFor="@string/editText_VoskActivity_result"
            android:id="@+id/result_text_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
        </EditText>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>